<h1>
  <%= @order.customer_id.name %>さんの注文履歴
</h1>

<table>
  <thead>
    <tr colspan ="3">
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= @order.create_at %>
      </td>
      <td>
        <%= @order.order_detail.amount %>
      </td>
      <td>
        <%= @order.status %>
      </td>
    </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>