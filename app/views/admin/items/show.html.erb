<h1>商品詳細</h1>

  <%= image_tag @item.get_item_image(100,100) %>

  <h3>商品名</h3>
  <%= @item.name %>
  <h3>商品説明</h3>
  <%= @item.introduction %>
  <h3>ジャンル</h3>
  <%= @item.genre.name %>
  <h3>税込価格<br>(税抜価格)</h3>
  <%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)
  <h3>販売ステータス</h3>
  <%= @item.is_active %>

  <%= link_to edit_admin_item_path(@item.id), class: "btn btn-outline-secondary" do %>
  <h1>編集する</h1>
  <% end %>