<h1>商品一覧</h1>
<table>
<thead>
  <tr colspan="5">
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜金額</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
</thead>
<tbody>
<% @items.each do |item| %>
  <tr>
    <td>
      <%= item.id %>
    </td>
    <td>
      <%= item.name %>
    </td>
    <td>
      <%= item.price %>
    </td>
    <td>
      <%= item.genre.name %>
    </td>
    <td>
      <%= item.is_active %>
    </td>
  </tr>
<% end %>
<%= paginate @items %>
</tbody>

</table>

