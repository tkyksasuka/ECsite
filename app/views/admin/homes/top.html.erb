<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr colspan ="4">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.create_at %>
      </td>
      <td>
        <%= order.customer.name %>
      </td>
      <td>
        <%= order.order_detail.amount %>
      </td>
      <td>
        <%= order.status %>
      </td>
    </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>

<%= link_to 'logout', destroy_admin_admin_session_path, method: :delete %>